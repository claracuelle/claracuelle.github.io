---
interface Props {
	title?: string;
}

const { title = "Clara Cuelle - Directrice artistique | Webdesigner" } =
	Astro.props as Props;
---

<html lang='fr'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/portfolio/logo-clara-cuelle-studio.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      @font-face {
        font-family: 'Boldonse';
        src: url('/portfolio/fonts/Boldonse-Regular.woff2') format('woff2');
        font-style: normal;
        font-display: swap;
      }
      @font-face {
        font-family: 'Geist';
        src: url('/portfolio/fonts/Geist-VariableFont_wght.woff2') format('woff2');
        font-style: normal;
        font-display: swap;
      }
    </style>
  </head>
  <body>
    <slot></slot>
  </body>
</html>
